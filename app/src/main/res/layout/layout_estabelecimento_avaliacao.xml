<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    app:contentPadding="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <TextView
            android:id="@+id/txtAvaliacaoNome"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IGOR VIANA MORAES"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtAvaliacaoNota"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5*"
            app:layout_constraintTop_toBottomOf="@+id/txtAvaliacaoNome"
            app:layout_constraintStart_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtAvaliacaoData"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/11/2017"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAvaliacaoNome"
            app:layout_constraintStart_toEndOf="@+id/txtAvaliacaoNota"
            />


        <TextView
            android:id="@+id/txtAvaliacaoAvaliacao"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUITO BOM MUITO BOM MUITO BOM MUITO BOM MUITO BOM MUITO BOM MUITO BOM MUITO BOM MUITO BOM MUITO BOM"
            app:layout_constraintTop_toBottomOf="@+id/txtAvaliacaoNota"
            app:layout_constraintStart_toEndOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

