<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/txtAvaliableName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/primaryTextColor"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text=""
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtAvaliable"
        android:layout_toStartOf="@+id/txtAvaliableNote"/>

    <TextView
        android:id="@+id/txtAvaliableNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/primaryTextColor"
        style="@style/TextAppearance.AppCompat.Large"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/txtAvaliable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/secondaryTextColor"
        style="@style/TextAppearance.AppCompat.Small"
        android:text=""
        android:layout_below="@+id/txtAvaliableNote"/>

    <View
        android:id="@+id/viewAvaliable"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff7f7f7f"
        android:layout_below="@+id/txtAvaliable"/>

</RelativeLayout>