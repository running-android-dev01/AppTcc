<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.igor.apptcc.EstabActivity"
    tools:showIn="@layout/activity_estab">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff000000"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="" />

            <TextView
                android:id="@+id/snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff7f7f7f"
                android:layout_gravity="center_horizontal"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:text=""
                android:gravity="center"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txtDrinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/primary_dark"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="Drinks"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/edtEditDrink"/>


                <ImageView
                    android:id="@+id/edtEditDrink"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primary_dark"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:id="@+id/lnlDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAvaliable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/primary_dark"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="Avaliable"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/edtEditAvaliable"/>


                <ImageView
                    android:id="@+id/edtEditAvaliable"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primary_dark"
                android:layout_marginBottom="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAvaliableName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text=""
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/txtAvaliable1"
                    android:layout_toStartOf="@+id/txtAvaliableNote1"/>

                <TextView
                    android:id="@+id/txtAvaliableNote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:text=""
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:id="@+id/txtAvaliable1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff7f7f7f"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:text=""
                    android:layout_below="@+id/txtAvaliableNote1"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewAvaliable1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff7f7f7f" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAvaliableName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text=""
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/txtAvaliable2"
                    android:layout_toStartOf="@+id/txtAvaliableNote2"/>

                <TextView
                    android:id="@+id/txtAvaliableNote2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:text=""
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:id="@+id/txtAvaliable2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff7f7f7f"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:text=""
                    android:layout_below="@+id/txtAvaliableNote2"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewAvaliable2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff7f7f7f" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAvaliableName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text=""
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/txtAvaliable3"
                    android:layout_toStartOf="@+id/txtAvaliableNote3"/>

                <TextView
                    android:id="@+id/txtAvaliableNote3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:text=""
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:id="@+id/txtAvaliable3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff7f7f7f"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:text=""
                    android:layout_below="@+id/txtAvaliableNote3"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewAvaliable3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff7f7f7f" />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
